# Environment Variables for Vercel Deployment
# Copy this to .env for local development
# Add these to Vercel dashboard for production

# Database Configuration
# Use PostgreSQL for production (Vercel Postgres, Supabase, or other)
DATABASE_URL=postgresql://user:password@host:5432/smartgate

# Security Keys
SECRET_KEY=change_me_to_random_32_plus_character_secret_key_here
JWT_SECRET=change_me_to_another_random_jwt_secret_key_here
JWT_ALG=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=720

# QR Code Settings
QR_TTL_MINUTES=15

# Feature Flags
FACE_AUTH_ENABLED=false
NOTIFICATIONS_ENABLED=false
GEOFENCE_ENABLED=true

# Firebase Configuration (Optional)
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# Campus Location Settings
CAMPUS_LATITUDE=31.7768
CAMPUS_LONGITUDE=77.0144
CAMPUS_RADIUS_KM=2.0

# API URL (will be auto-set by Vercel)
API_BASE_URL=https://your-app.vercel.app

# Node Environment
NODE_ENV=production
